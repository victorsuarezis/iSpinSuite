<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.spinsuite.base"
    android:versionCode="8"
    android:versionName="Beta 2.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/spinsuite_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:launchMode="singleTop"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.spinsuite.login.Login"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.spinsuite.view.V_Preferences"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.spinsuite.view.LV_Menu"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.spinsuite.view.V_Synchronization"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.spinsuite.view.TV_Base"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.spinsuite.view.TV_DynamicActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="org.spinsuite.view.V_StandardSearch"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.spinsuite.view.V_Process"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.spinsuite.view.V_AttachView"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.spinsuite.bchat.view.V_BChat"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="org.spinsuite.bchat.view.V_BChat_AddGroup"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>

        <service android:name="org.spinsuite.sync.InitialLoadTask" />
        <service android:name="org.spinsuite.sync.SyncService" />
        <!-- Mqtt Service -->
        <service android:name="org.eclipse.paho.android.service.MqttService" />
        <!-- Sync Service -->
        <service android:name="org.spinsuite.mqtt.connection.MQTTSyncService" />
        <!-- Boot Start Service -->
        <receiver android:name="org.spinsuite.mqtt.connection.MQTTBootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <!-- Network Stop -->
        <receiver android:name="org.spinsuite.mqtt.connection.MQTTNetworkReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>